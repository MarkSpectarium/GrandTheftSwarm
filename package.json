{
  "name": "grand-theft-swarm",
  "version": "0.1.0",
  "private": true,
  "description": "A browser-based idle farming game where players build a rice empire in Vietnam's Mekong Delta",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter client dev",
    "dev:api": "pnpm --filter api dev",
    "dev:all": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "build:client": "pnpm --filter client build",
    "build:api": "pnpm --filter api build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean"
  },
  "keywords": [
    "idle-game",
    "clicker",
    "typescript",
    "browser-game",
    "farming",
    "vietnam"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
