{
  "name": "grand-theft-swarm",
  "version": "0.1.0",
  "private": true,
  "description": "A browser-based idle farming game where players build a rice empire in Vietnam's Mekong Delta",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "node scripts/dev.js",
    "dev:client": "pnpm --filter client dev",
    "dev:api": "pnpm --filter api dev",
    "build": "pnpm -r build",
    "build:client": "pnpm --filter client build",
    "build:api": "pnpm --filter api build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean",
    "vercel-build": "pnpm build:api && node scripts/bundle-api.js && pnpm build:client"
  },
  "keywords": [
    "idle-game",
    "clicker",
    "typescript",
    "browser-game",
    "farming",
    "vietnam"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "@vercel/node": "^3.2.0",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.36.0",
    "express": "^4.22.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "esbuild": "^0.20.0",
    "typescript": "^5.6.0"
  }
}
